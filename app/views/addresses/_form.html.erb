<%= form_for(@address) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :street, "Street", class: 'label' %>
    <div class="control">
      <%= f.text_field :street, class: 'input' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :city, "City", class: 'label' %>
    <div class="control">
      <%= f.text_field :city, class: 'input' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :province_id, "Province", class: 'label' %>
    <div class="control">
      <div class="select">
        <%= f.select(:province_id, options_for_province, {:prompt => '- Select -'}) %>
      </div>
    </div>
  </div>
  
  <div class="field">
    <%= f.label :postal_code, "Postal Code", class: 'label' %>
    <div class="control">
      <%= f.text_field :postal_code, class: 'input' %>
    </div>
  </div>

  <div class="buttons">
    <%= f.submit "Save", class: "button is-link" %>
    <%= link_to 'Cancel', cancel_path, class: "button", role: "button" %>
  </div>
<% end %>