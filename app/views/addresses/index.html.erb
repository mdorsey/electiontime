<% provide(:title, 'Addresses') %>
<h1>Addresses</h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'layouts/admin_menu' %>
  </div>
  <div class="column">
    <div class="buttons">
      <%= link_to '+ New Address', new_address_path, class: "button is-link" %>
    </div>
    
    <ul class="resources-list">
      <%= render @addresses %>
    </ul>
    
    <%= will_paginate renderer: BulmaPagination::Rails, :class => 'is-centered' %>
  </div>
</div>