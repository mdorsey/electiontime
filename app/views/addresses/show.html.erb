<% provide(:title, @address.street) %>
<h1>Address: <%= @address.street %></h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'layouts/admin_menu' %>
  </div>
  <div class="column">
    <div class="field">
      <label class="label">Street</label>
      <%= @address.street %>
    </div>

    <div class="field">
      <label class="label">City</label>
      <%= @address.city %>
    </div>

    <div class="field">
      <label class="label">Province</label>
      <%= display_province(@address.province_id) %>
    </div>

    <div class="field">
      <label class="label">Postal Code</label>
      <%= @address.postal_code %>
    </div>

    <div class="buttons">
      <%= link_to 'Edit', edit_address_path(@address), class: "button is-link" %>
      <%= link_to 'Delete', @address, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %>
      <%= link_to 'Back', addresses_path, class: "button" %>
    </div>
  </div>
</div>