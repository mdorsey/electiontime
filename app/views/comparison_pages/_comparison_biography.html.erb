  <hr>
</a>
<div class="comparison-section-heading">
  Biographies
</div>
<div class="comparison-candidates-grid">
  <div class="columns is-multiline">
    <% participants.each do |p| %>
      <div class="column is-one-third">
        <!-- Header -->
        <%= render 'comparison_pages/comparison_participant_header', participant_id: p.id, party_id: p.party_id, avatar_image_class: 'is-avatar' %>
  
        <!-- Biography -->
        <p><%= p.biography %></p>
      </div>
    <% end %>
  </div>
</div>