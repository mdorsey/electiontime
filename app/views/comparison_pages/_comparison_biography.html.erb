<div id="biographies">
  <hr>
</div>
<div class="comparison-section-heading">
  Biographies
</div>
<div class="comparison-candidates-grid">
  <div class="columns is-multiline">
    <% participants.each do |p| %>
      <div class="column is-one-third">
        <!-- Header -->
        <%= render 'comparison_pages/comparison_participant_header', participant_id: p.id, party_id: p.party_id, avatar_image_class: 'avatar' %>
  
        <!-- Biography -->
        <% if p.biography.present? %>
          <p><%= p.biography %></p>
        <% elsif p.email.present? && empty_profile_text %>
          <%= render 'comparison_pages/empty_profile', participant_id: p.id, participant_email: p.email, empty_profile_text: empty_profile_text %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>