<div class="election-summary-header">
  <div class="election-details-and-picture-container">
    <div class="columns">
  
      <!-- Election picture -->
      <div class="column is-narrow">
        <figure class="image election-picture-small">
          <%= image_tag(get_election_picture_url(@election.id), alt: @election.name) %>
        </figure>
      </div>
    
      <!-- Election details -->
      <div class="column">
        <p class="election-name-small">
          <%= @election.name %>
        </p>
        <p><%= display_election_date(@election.election_date) %></p>
      </div>
    </div>
  </div>
</div>

<h1><%= page_heading %></h1>
<div class="comparison-intro">
  <p>
    <%= participant_title %> are listed alphabetically
  </p>
  <% if display_incumbent %>
    <p>
      <span class="icon-text">
        <span class="icon">
          <i class="fas fa-star"></i>
        </span>
        <span>Incumbent</span>
      </span>
    </p>
  <% end %>
</div>