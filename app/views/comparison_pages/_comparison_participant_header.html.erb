<div class="columns">
  <!-- Profile picture -->
  <div class="column is-narrow">
    <figure class="image <%= avatar_image_class %>">
      <%= image_tag(get_participant_picture_url(participant_id), alt: display_participant(participant_id)) %>
    </figure>
  </div>

  <!-- Name, party, incumbent -->
  <div class="column">
    <p class="participant-name">
      <%= display_participant(participant_id, true) %>
      <% if is_participant_an_incumbent(participant_id) %>
        <span class="icon">
          <i class="fas fa-star"></i>
        </span>
      <% end %>
    </p>
    <% if is_participant_a_candidate(participant_id) %>
      <p><%= display_party(party_id) %></p>
    <% end %>
  </div>
</div>