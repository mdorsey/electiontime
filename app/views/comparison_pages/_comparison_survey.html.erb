<% survey_questions.each do |question_id, question| %>
  <a id="question_<%= question_id %>"><h3><%= question %></h3></a>
  <div class="columns is-multiline">
    <% participants.each do |p| %>
      <div class="column is-one-third">
        <!-- Header -->
        <%= render 'comparison_pages/comparison_participant_header', participant_id: p.id, party_id: p.party_id %>

        <!-- Survey Answer -->
        <p><%= display_survey_answer(question_id, p.id) %></p>
      </div>
    <% end %>
  </div>
<% end %>