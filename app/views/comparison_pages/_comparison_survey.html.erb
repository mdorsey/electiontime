<% survey_questions.each do |question_id, topic| %>
  <div id="question_<%= question_id %>">
    <hr>
  </div>
  <div class="comparison-section-heading">
    <%= topic %>
  </div>
  <div class="survey-question-text">
    <p><%= display_survey_question(question_id) %></p>
  </div>
  <div class="comparison-candidates-grid">
    <div class="columns is-multiline">
      <% participants.each do |p| %>
        <div class="column is-one-third">
          <!-- Header -->
          <%= render 'comparison_pages/comparison_participant_header', participant_id: p.id, party_id: p.party_id, avatar_image_class: 'is-avatar' %>
  
          <!-- Survey Answer -->
          <p><%= display_survey_answer_text(question_id, p.id) %></p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>