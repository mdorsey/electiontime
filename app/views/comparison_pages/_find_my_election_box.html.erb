<div class="box">
  <div class="find-my-election-box">
    <div class="columns">

      <!-- Flag image -->
      <div class="column is-narrow">
        <figure class="image is-flag">
          <%= image_tag(get_election_picture_url(election.id), alt: election.name) %>
        </figure>
      </div>
    
      <!-- Election details -->
      <div class="column">
        <p><%= election.name %></p>
        <p><%= display_election_date(election.election_date) %></p>
        <p><%= number_with_delimiter(get_number_of_election_candidates(election.id), :delimiter => ',') %> candidates</p>
        <p><%= number_with_delimiter(get_number_of_election_parties(election.id), :delimiter => ',') %> parties</p>
      </div>
    </div>
  </div>
</div>