<% provide(:title, "Compare Candidates in " + @district.name) %>
<h1>Compare Candidates in <%= @district.name %></h1>

<!-- INTRO -->
<%= render 'comparison_pages/comparison_intro', participant_title: 'Candidates', display_incumbent: true %>

<!-- NAV MENU -->
<%= render 'comparison_pages/comparison_nav_menu', survey_questions: @survey_questions %>

<!-- BIOGRAPHIES -->
<%= render 'comparison_pages/comparison_biography', participants: @candidates %>

<!-- SURVEY QUESTIONS AND ANSWERS -->
<%= render 'comparison_pages/comparison_survey', survey_questions: @survey_questions, participants: @candidates %>

<!-- CONTACTS -->
<%= render 'comparison_pages/comparison_contact', participants: @candidates %>