<% provide(:title, "Compare Candidates for " + @office.name + " in " + @district.name) %>

<!-- INTRO -->
<%= render 'comparison_pages/comparison_intro', page_heading: 'Compare Candidates for ' + @office.name + ' in ' + @district.name, participant_title: 'Candidates', display_incumbent: true %>

<!-- NAV MENU -->
<%= render 'comparison_pages/comparison_nav_menu', survey_questions: @survey_questions %>

<!-- BIOGRAPHIES -->
<%= render 'comparison_pages/comparison_biography', participants: @candidates, empty_profile_text: @content_empty_profile_text %>

<!-- SURVEY QUESTIONS AND ANSWERS -->
<%= render 'comparison_pages/comparison_survey', survey_questions: @survey_questions, participants: @candidates %>

<!-- CONTACTS -->
<%= render 'comparison_pages/comparison_contact', participants: @candidates %>