<% provide(:title, "Election Summary") %>
<h1>Election Summary</h1>

<nav class="level">
  <div class="level-item has-text-centered">
    <div>
      <h3><%= @election.name %></h3>
      <p>Type: <%= display_election_type(@election.election_type_id) %></p>
      <p>Jurisdiction: <%= display_jurisdiction(@election.jurisdiction_id) %></p>
      <p>Date: <%= display_election_date(@election.election_date) %></p>
    </div>
  </div>
</nav>

<%= link_to compare_party_leaders_path(@election) do %>
  <h3>Compare Party Leaders</h3>
  <nav class="level">
    <% @participant_party_leaders.each do |participant_party_leader| %>
      <div class="level-item has-text-centered">
        <div>
          <%= image_tag(get_participant_picture_url(participant_party_leader.id), size: "100x100", alt: display_participant(participant_party_leader.id)) %>
          <br />
          <%= display_participant(participant_party_leader.id, true) %>
          <br />
          <%= display_party(participant_party_leader.party_id) %>
        </div>
      </div>
    <% end %>
  </nav>
<% end %>

<%= link_to compare_party_platforms_path(@election) do %>
  <h3>Compare Party Platforms</h3>
  <nav class="level">
    <% @participant_parties.each do |participant_party| %>
      <div class="level-item has-text-centered">
        <div>
          <%= image_tag(get_participant_picture_url(participant_party.id), size: "100x100", alt: display_participant(participant_party.id)) %>
          <br />
          <%= display_participant(participant_party.id) %>
        </div>
      </div>
    <% end %>
  </nav>
<% end %>

<%= form_with(url: election_summary_path(@election), method: "get", local: true) do |f| %>
  <nav class="level">
    <div class="level-item has-text-centered">
      <div>
        <h3>Compare Candidates</h3>
        <%= f.label "Select your riding", class: 'label' %>
        <div class="control">
          <div class="select">
            <%= f.select(:district_id, options_for_select(options_for_district)) %>
          </div>
        </div>
        <div class="buttons">
          <%= f.submit "Go!", class: "button is-link" %>
        </div>
      </div>
    </div>
  </nav>
<% end %>