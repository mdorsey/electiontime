<% provide(:title, "Find My Election") %>

<h1>Upcoming Elections</h1>
<ul>
  <% @elections_future.each do |e| %>
    <li>
      <%= link_to election_summary_path(e) do %>
        <div class="box">
          <article class="election-banner">
            <figure class="image is-flag">
              <%= image_tag(get_election_picture_url(e.id), alt: e.name) %>
            </figure>
            <h2><%= e.name %></h2>
            <p><%= display_election_date(e.election_date) %></p>
          </article>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>

<% unless @elections_past.empty? %>
  <hr>
  <h1>Past Elections</h1>
  <ul>
    <% @elections_past.each do |e| %>
      <li>
        <%= link_to election_summary_path(e) do %>
          <div class="box">
            <article class="election-banner">
              <figure class="image is-flag">
                <%= image_tag(get_election_picture_url(e.id), alt: e.name) %>
              </figure>
              <h2><%= e.name %></h2>
              <p><%= display_election_date(e.election_date) %></p>
            </article>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>