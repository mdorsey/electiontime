<% provide(:title, 'Content Locations') %>
<h1>Content Locations</h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'layouts/admin_menu' %>
  </div>
  <div class="column">
    <div class="buttons">
      <%= link_to '+ New Content Location', new_content_location_path, class: "button is-link" %>
    </div>

    <ul class="resources-list">
      <%= render @content_locations %>
    </ul>

    <%= will_paginate renderer: BulmaPagination::Rails, :class => 'is-centered' %>
  </div>
</div>