<% provide(:title, @district.name) %>
<h1>District: <%= @district.name %></h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'layouts/admin_menu' %>
  </div>
  <div class="column">
    <div class="field">
      <label class="label">Name</label>
      <%= @district.name %>
    </div>

    <div class="field">
      <label class="label">Election Type</label>
      <%= display_election_type(@district.election_type_id) %>
    </div>

    <div class="field">
      <label class="label">Jurisdiction</label>
      <%= display_jurisdiction(@district.jurisdiction_id) %>
    </div>

    <div class="buttons">
      <%= link_to 'Edit', edit_district_path(@district), class: "button is-link" %>
      <%= link_to 'Delete', @district, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %>
      <%= link_to 'Back', districts_path, class: "button" %>
    </div>
  </div>
</div>

