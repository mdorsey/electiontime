<% provide(:title, @district.name) %>
<h1>District: <%= @district.name %></h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'admin/admin_menu' %>
  </div>
  <div class="column">
    <div class="buttons">
      <%= link_to 'Edit', edit_district_path(@district), class: "button is-link" %>
      <%= link_to 'Delete', @district, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %>
      <%= link_to 'Back', districts_path, class: "button" %>
    </div>

    <div class="show-grid-wrapper">

      <div class="grid-label">Name:</div>
      <div class="grid-value"><%= @district.name %></div>

      <div class="grid-label">Election Type:</div>
      <div class="grid-value"><%= display_election_type(@district.election_type_id) %></div>

      <div class="grid-label">Jurisdiction:</div>
      <div class="grid-value"><%= display_jurisdiction(@district.jurisdiction_id) %></div>

    </div>
  </div>
</div>

