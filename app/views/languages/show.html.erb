<% provide(:title, @language.name) %>
<h1>Language: <%= @language.name %></h1>

<p>
  <strong>Name: </strong><%= @language.name %>
</p>

<%= link_to 'Edit', edit_language_path(@language), class: "btn btn-primary" %>
<%= link_to 'Delete', @language, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
<%= link_to 'Back', languages_path, class: "btn btn-default" %>