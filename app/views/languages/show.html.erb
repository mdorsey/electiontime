<% provide(:title, @language.name) %>
<h1>Language: <%= @language.name %></h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'layouts/admin_menu' %>
  </div>
  <div class="column">
    <div class="buttons">
      <%= link_to 'Edit', edit_language_path(@language), class: "button is-link" %>
      <%= link_to 'Delete', @language, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %>
      <%= link_to 'Back', languages_path, class: "button" %>
    </div>
    
    <div class="field">
      <label class="label">Name</label>
      <%= @language.name %>
    </div>
  </div>
</div>