<footer class="footer">
  <div class="container">
    <div class="columns">

      <div class="column is-4 is-offset-3">
        <div class="footer-item">
          <%= image_tag("election_time_logo.png", alt: "ElectionTime.org", class: "footer-logo") %>
        </div>
        <div class="footer-item">
          <div class="footer-flex-row">
            <div class="footer-flex-space">
              <p>Proudly made in Canada</p>
            </div>
            <div>
              <figure class="image is-32x32">
                <%= image_tag("canada_flag_footer.png", alt: "Canada flag") %>
              </figure>
            </div>
          </div>
        </div>
        <div class="footer-item">
          <div class="footer-flex-row">
            <div class="footer-flex-space">
              <a href="https://twitter.com/ElectionTimeOrg" target="_blank">
                <figure class="image is-48x48">
                  <%= image_tag("twitter_logo.png", alt: "Twitter") %>
                </figure>
              </a>
            </div>
            <div>
              <a href="https://www.facebook.com/ElectionTimeOrg" target="_blank">
                <figure class="image is-48x48">
                  <%= image_tag("facebook_logo.png", alt: "Facebook") %>
                </figure>
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-4">
        <div class="footer-item">
          <ul>
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "Find My Election", find_my_election_path %></li>
            <li><%= link_to "About", about_path %></li>
            <li><%= link_to "Contact", contact_path %></li>
    
            <% if logged_in? %>
              <% if has_participant? %>
                <li><%= link_to "Public Profiles", profiles_path %></li>
              <% end %>
              <li><%= link_to "Account Settings", user_path(current_user) %></li>
              <li><%= link_to "Log Out", logout_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "Log In", login_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div class="disclaimer">
      <p>This website is strictly independent and not affiliated with any political parties or candidates. <%= link_to "Learn more.", about_path %></p>
    </div>
  </div>
</footer>