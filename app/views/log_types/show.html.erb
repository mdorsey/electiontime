<% provide(:title, @log_type.name) %>
<h1>Log Type: <%= @log_type.name %></h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'admin/admin_menu' %>
  </div>
  <div class="column">
    <div class="buttons">
      <%= link_to 'Edit', edit_log_type_path(@log_type), class: "button is-primary" %>
      <%= link_to 'Delete', @log_type, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %>
      <%= link_to 'Back', log_types_path, class: "button is-light" %>
    </div>

    <div class="show-grid-wrapper">

      <div class="grid-label">Name:</div>
      <div class="grid-value"><%= @log_type.name %></div>

    </div>
  </div>
</div>

