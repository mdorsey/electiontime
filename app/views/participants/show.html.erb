<% provide(:title, display_participant(@participant.id)) %>
<h1>Participant: <%= display_participant(@participant.id) %></h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'shared/admin_menu' %>
  </div>
  <div class="column">
    <div class="buttons">
      <%= link_to 'Edit', edit_participant_path(@participant), class: "button is-link" %>
      <%= link_to 'Delete', @participant, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %>
      <%= link_to 'Back', participants_path, class: "button" %>
    </div>

    <div class="show-grid-wrapper">

      <div class="grid-label">Picture:</div>
      <div class="grid-value"><%= image_tag(get_participant_picture_url(@participant.id), class: "image is-128x128", alt: display_user(@participant.user_id)) %></div>

      <div class="grid-label">User:</div>
      <div class="grid-value"><%= display_user(@participant.user_id) %></div>

      <div class="grid-label">Name:</div>
      <div class="grid-value"><%= @participant.name %></div>

      <div class="grid-label">Party:</div>
      <div class="grid-value"><%= display_party(@participant.party_id) %></div>

      <div class="grid-label">District:</div>
      <div class="grid-value"><%= display_district(@participant.district_id) %></div>

      <div class="grid-label">Leader Participant:</div>
      <div class="grid-value"><%= display_participant(@participant.leader_participant_id) %></div>

      <div class="grid-label">Is Candidate:</div>
      <div class="grid-value"><%= display_boolean_as_yes_or_no(@participant.is_candidate) %></div>

      <div class="grid-label">Is Incumbent:</div>
      <div class="grid-value"><%= display_boolean_as_yes_or_no(@participant.is_incumbent) %></div>

      <div class="grid-label">Email:</div>
      <div class="grid-value"><%= @participant.email %></div>

      <div class="grid-label">Phone:</div>
      <div class="grid-value"><%= @participant.phone %></div>

      <div class="grid-label">Website:</div>
      <div class="grid-value"><%= @participant.website %></div>

      <div class="grid-label">Biography:</div>
      <div class="grid-value"><%= @participant.biography %></div>

      <div class="grid-label">Address:</div>
      <div class="grid-value"><%= display_address(@participant.address_id) %></div>

    </div>
  </div>
</div>

