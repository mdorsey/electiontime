<% provide(:title, "Log In") %>
<h1>Log In</h1>

<%= form_for(:session, url: login_path) do |f| %>

  <div class="field">
    <%= f.label :email, "Email", class: 'label' %>
    <div class="control">
      <%= f.email_field :email, class: 'input' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password, "Password", class: 'label' %>
    <div class="control">
      <%= f.password_field :password, class: 'input' %>
    </div>
  </div>
  
  <div class="field">
    <div class="control">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Remember me on this device" %>
    </div>
  </div>

  <div class="buttons">
    <%= f.submit "Log In", class: "button is-primary" %>
  </div>

  <%= link_to "Forgot password", new_password_reset_path %>
<% end %>