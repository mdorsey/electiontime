<% provide(:title, @social_media_profile.handle) %>
<h1>Social Media Profile: <%= @social_media_profile.handle %></h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'layouts/admin_menu' %>
  </div>
  <div class="column">
    <div class="field">
      <label class="label">Handle</label>
      <%= @social_media_profile.handle %>
    </div>

    <div class="field">
      <label class="label">Participant</label>
      <%= display_participant(@social_media_profile.participant_id) %>
    </div>

    <div class="field">
      <label class="label">Social Media Type</label>
      <%= display_social_media_type(@social_media_profile.social_media_type_id) %>
    </div>

    <div class="buttons">
      <%= link_to 'Edit', edit_social_media_profile_path(@social_media_profile), class: "button is-link" %>
      <%= link_to 'Delete', @social_media_profile, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %>
      <%= link_to 'Back', social_media_profiles_path, class: "button" %>
    </div>
  </div>
</div>

