<% provide(:title, 'Social Media Types') %>
<h1>Social Media Types</h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'layouts/admin_menu' %>
  </div>
  <div class="column">
    <div class="buttons">
      <%= link_to '+ New Social Media Type', new_social_media_type_path, class: "button is-link" %>
    </div>

    <ul class="resources-list">
      <%= render @social_media_types %>
    </ul>

    <%= will_paginate renderer: BulmaPagination::Rails, :class => 'is-centered' %>
  </div>
</div>