<% provide(:title, @social_media_type.name) %>
<h1>Social Media Type: <%= @social_media_type.name %></h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'admin/admin_menu' %>
  </div>
  <div class="column">
    <div class="buttons">
      <%= link_to 'Edit', edit_social_media_type_path(@social_media_type), class: "button is-primary" %>
      <%= link_to 'Delete', @social_media_type, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %>
      <%= link_to 'Back', social_media_types_path, class: "button is-light" %>
    </div>

    <div class="show-grid-wrapper">

      <div class="grid-label">Name:</div>
      <div class="grid-value"><%= @social_media_type.name %></div>

      <div class="grid-label">Website:</div>
      <div class="grid-value"><%= @social_media_type.website %></div>

      <div class="grid-label">Icon:</div>
      <div class="grid-value"><%= @social_media_type.icon %></div>

    </div>
  </div>
</div>