<%= form_for(@survey_answer) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :survey_question_id, "Survey Question", class: 'label' %>
    <div class="control">
      <%= f.select(:survey_question_id, options_for_survey_question, {:prompt => '- Select -'}, {:class => 'input'}) %>
    </div>
  </div>

  <div class="field">
    <%= f.label :participant_id, "Participant", class: 'label' %>
    <div class="control">
      <div class="select">
        <%= f.select(:participant_id, options_for_participant, {:prompt => '- Select -'}, {:class => 'input'}) %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.label :answer, "Answer", class: 'label' %>
    <div class="control">
      <%= f.text_area :answer, class: 'textarea' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :source, "Source", class: 'label' %>
    <div class="control">
      <%= f.text_area :source, class: 'textarea' %>
    </div>
  </div>

  <div class="buttons">
    <%= f.submit "Save", class: "button-with-extra-space is-primary" %>
    <%= link_to 'Cancel', cancel_path, class: "button-with-extra-space is-light", role: "button" %>
  </div>
<% end %>