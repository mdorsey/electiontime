<% provide(:title, 'Survey Answer') %>
<h1>Survey Answer</h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'admin/admin_menu' %>
  </div>
  <div class="column">
    <div class="buttons">
      <%= link_to 'Edit', edit_survey_answer_path(@survey_answer), class: "button is-primary" %>
      <%= link_to 'Delete', @survey_answer, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %>
      <%= link_to 'Back', survey_answers_path, class: "button is-light" %>
    </div>

    <div class="show-grid-wrapper">

      <div class="grid-label">Survey Question:</div>
      <div class="grid-value"><%= display_survey_question(@survey_answer.survey_question_id) %></div>

      <div class="grid-label">Participant:</div>
      <div class="grid-value"><%= display_participant(@survey_answer.participant_id) %></div>

      <div class="grid-label">Answer:</div>
      <div class="grid-value"><%= @survey_answer.answer %></div>

      <div class="grid-label">Source:</div>
      <div class="grid-value"><%= @survey_answer.source %></div>

    </div>
  </div>
</div>