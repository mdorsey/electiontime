<%= form_for(@survey_question) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :survey_id, "Survey" %>
  <%= f.select(:survey_id, options_for_survey, {:prompt => '- Select -'}, {:class => 'form-control'}) %>

  <%= f.label :question, "Question" %>
  <%= f.text_field :question, class: 'form-control' %>

  <%= f.label :order, "Order" %>
  <%= f.text_field :order, class: 'form-control' %>

  <%= f.submit "Save", class: "btn btn-primary" %>
  <%= link_to 'Cancel', cancel_path, class: "btn btn-default", role: "button" %>
<% end %>