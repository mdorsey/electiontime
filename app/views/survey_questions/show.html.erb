<% provide(:title, @survey_question.question) %>
<h1>Survey Question: <%= @survey_question.question %></h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'admin/admin_menu' %>
  </div>
  <div class="column">
    <div class="buttons">
      <%= link_to 'Edit', edit_survey_question_path(@survey_question), class: "button is-link" %>
      <%= link_to 'Delete', @survey_question, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %>
      <%= link_to 'Back', survey_questions_path, class: "button" %>
    </div>

    <div class="show-grid-wrapper">

      <div class="grid-label">Survey:</div>
      <div class="grid-value"><%= display_survey(@survey_question.survey_id) %></div>

      <div class="grid-label">Topic:</div>
      <div class="grid-value"><%= @survey_question.topic %></div>

      <div class="grid-label">Question:</div>
      <div class="grid-value"><%= @survey_question.question %></div>

      <div class="grid-label">Order:</div>
      <div class="grid-value"><%= @survey_question.order %></div>

    </div>
  </div>
</div>