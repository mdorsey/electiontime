<% provide(:title, @survey_type.name) %>
<h1>Survey Type: <%= @survey_type.name %></h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'layouts/admin_menu' %>
  </div>
  <div class="column">
    <div class="buttons">
      <%= link_to 'Edit', edit_survey_type_path(@survey_type), class: "button is-link" %>
      <%= link_to 'Delete', @survey_type, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %>
      <%= link_to 'Back', survey_types_path, class: "button" %>
    </div>
    
    <div class="field">
      <label class="label">Name</label>
      <%= @survey_type.name %>
    </div>
  </div>
</div>