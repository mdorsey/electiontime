<%= form_for(@survey) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :name, "Name", class: 'label' %>
    <div class="control">
      <%= f.text_field :name, class: 'input' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :description, "Description", class: 'label' %>
    <div class="control">
      <%= f.text_field :description, class: 'input' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :survey_type_id, "Survey Type", class: 'label' %>
    <div class="control">
      <div class="select">
        <%= f.select(:survey_type_id, options_for_survey_type, {:prompt => '- Select -'}) %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.label :election_id, "Election", class: 'label' %>
    <div class="control">
      <div class="select">
        <%= f.select(:election_id, options_for_election, {:prompt => '- Select -'}) %>
      </div>
    </div>
  </div>
  
  <div class="buttons">
    <%= f.submit "Save", class: "button-with-extra-space is-primary" %>
    <%= link_to 'Cancel', cancel_path, class: "button-with-extra-space is-light", role: "button" %>
  </div>
<% end %>