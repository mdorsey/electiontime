<% provide(:title, 'Surveys') %>
<h1>Surveys</h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'layouts/admin_menu' %>
  </div>
  <div class="column">
    <div class="buttons">
      <%= link_to '+ New Survey', new_survey_path, class: "button is-link" %>
    </div>

    <ul class="resources-list">
      <%= render @surveys %>
    </ul>

    <%= will_paginate renderer: BulmaPagination::Rails, :class => 'is-centered' %>
  </div>
</div>