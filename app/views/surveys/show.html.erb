<% provide(:title, @survey.name) %>
<h1>Survey: <%= @survey.name %></h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'shared/admin_menu' %>
  </div>
  <div class="column">
    <div class="buttons">
      <%= link_to 'Edit', edit_survey_path(@survey), class: "button is-link" %>
      <%= link_to 'Delete', @survey, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %>
      <%= link_to 'Back', surveys_path, class: "button" %>
    </div>

    <div class="show-grid-wrapper">

      <div class="grid-label">Name:</div>
      <div class="grid-value"><%= @survey.name %></div>

      <div class="grid-label">Description:</div>
      <div class="grid-value"><%= @survey.description %></div>

      <div class="grid-label">Survey Type:</div>
      <div class="grid-value"><%= display_survey_type(@survey.survey_type_id) %></div>

      <div class="grid-label">Election:</div>
      <div class="grid-value"><%= display_election(@survey.election_id) %></div>

    </div>
  </div>
</div>