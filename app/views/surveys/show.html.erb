<% provide(:title, @survey.name) %>
<h1>Survey: <%= @survey.name %></h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'layouts/admin_menu' %>
  </div>
  <div class="column">
    <div class="field">
      <label class="label">Name</label>
      <%= @survey.name %>
    </div>

    <div class="field">
      <label class="label">Description</label>
      <%= @survey.description %>
    </div>

    <div class="field">
      <label class="label">Survey Type:</label>
      <%= display_survey_type(@survey.survey_type_id) %>
    </div>

    <div class="field">
      <label class="label">Election</label>
      <%= display_election(@survey.election_id) %>
    </div>

    <div class="buttons">
      <%= link_to 'Edit', edit_survey_path(@survey), class: "button is-link" %>
      <%= link_to 'Delete', @survey, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %>
      <%= link_to 'Back', surveys_path, class: "button" %>
    </div>
  </div>
</div>