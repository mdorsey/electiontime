<% provide(:title, 'System Settings') %>
<h1>System Settings</h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'layouts/admin_menu' %>
  </div>
  <div class="column">
    <div class="buttons">
      <%= link_to '+ New System Setting', new_system_setting_path, class: "button is-link" %>
    </div>

    <ul class="resources-list">
      <%= render @system_settings %>
    </ul>

    <%= will_paginate renderer: BulmaPagination::Rails, :class => 'is-centered' %>
  </div>
</div>