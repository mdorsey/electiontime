<% provide(:title, @system_setting.name) %>
<h1>System Setting: <%= @system_setting.name %></h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'admin/admin_menu' %>
  </div>
  <div class="column">
    <div class="buttons">
      <%= link_to 'Edit', edit_system_setting_path(@system_setting), class: "button is-link" %>
      <%= link_to 'Delete', @system_setting, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %>
      <%= link_to 'Back', system_settings_path, class: "button" %>
    </div>

    <div class="show-grid-wrapper">

      <div class="grid-label">Name:</div>
      <div class="grid-value"><%= @system_setting.name %></div>

      <div class="grid-label">Setting:</div>
      <div class="grid-value"><%= @system_setting.setting %></div>

    </div>
  </div>
</div>