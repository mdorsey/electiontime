<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :first_name, "First Name" %>
  <%= f.text_field :first_name, class: 'input' %>

  <%= f.label :last_name, "Last Name" %>
  <%= f.text_field :last_name, class: 'input' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'input' %>

  <%= f.label :user_type_id, "User Type" %>
  <%= f.select(:user_type_id, options_for_user_type, {:prompt => '- Select -'}, {:class => 'input'}) %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'input' %>

  <%= f.label :password_confirmation, "Password Confirmation" %>
  <%= f.password_field :password_confirmation, class: 'input' %>

  <div class="buttons">
    <%= f.submit "Save", class: "button is-link" %>
    <%= link_to 'Cancel', cancel_path, class: "button", role: "button" %>
  </div>
<% end %>