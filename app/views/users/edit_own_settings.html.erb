<% provide(:title, 'Edit Settings') %>
<h1>Edit Settings</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <h2>Profile Details</h2>

  <div class="field">
    <%= f.label :first_name, "First Name", class: 'label' %>
    <div class="control">
      <%= f.text_field :first_name, class: 'input' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :last_name, "Last Name", class: 'label' %>
    <div class="control">
      <%= f.text_field :last_name, class: 'input' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :email, "Email", class: 'label' %>
    <div class="control">
      <%= f.email_field :email, class: 'input' %>
    </div>
  </div>

  <hr>
  <h2>Change Your Password</h2>

  <div class="field">
    <%= f.label :password, "Password", class: 'label' %>
    <div class="control">
      <%= f.password_field :password, class: 'input' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Password Confirmation", class: 'label' %>
    <div class="control">
      <%= f.password_field :password_confirmation, class: 'input' %>
    </div>
  </div>

  <div class="buttons">
    <%= f.submit "Save", class: "button is-link" %>
    <%= link_to 'Cancel', @user, class: "button", role: "button" %>
  </div>
<% end %>