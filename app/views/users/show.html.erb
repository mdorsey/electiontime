<% provide(:title, @user.first_name + ' ' + @user.last_name) %>
<h1>User: <%= @user.first_name + ' ' + @user.last_name %></h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'layouts/admin_menu' %>
  </div>
  <div class="column">
    <div class="field">
      <label class="label">First Name</label>
      <%= @user.first_name %>
    </div>

    <div class="field">
      <label class="label">Last Name</label>
      <%= @user.last_name %>
    </div>

    <div class="field">
      <label class="label">Email</label>
      <%= @user.email %>
    </div>

    <div class="field">
      <label class="label">User Type</label>
      <%= display_user_type(@user.user_type_id) %>
    </div>

    <div class="field">
      <label class="label">Activated</label>
      <%= @user.activated %>
    </div>

    <div class="field">
      <label class="label">Activated At</label>
      <%= @user.activated_at.localtime %>
    </div>

    <div class="field">
      <label class="label">Created At</label>
      <%= @user.created_at.localtime %>
    </div>

    <div class="field">
      <label class="label">Updated At</label>
      <%= @user.updated_at.localtime %>
    </div>

    <div class="buttons">
      <%= link_to 'Edit', edit_user_path(@user), class: "button is-link" %>
      <%= link_to 'Delete', @user, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %>
      <%= link_to 'Back', users_path, class: "button" %>
    </div>
  </div>
</div>