<% provide(:title, display_user(@user.id)) %>
<h1>User: <%= display_user(@user.id) %></h1>

<div class="columns">
  <div class="column is-narrow">
    <%= render 'admin/admin_menu' %>
  </div>
  <div class="column">
    <div class="buttons">
      <%= link_to 'Edit', edit_user_path(@user), class: "button is-primary" %>
      <%= link_to 'Delete', @user, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" %>
      <%= link_to 'Back', users_path, class: "button is-light" %>
    </div>

    <div class="show-grid-wrapper">

      <div class="grid-label">First Name:</div>
      <div class="grid-value"><%= @user.first_name %></div>

      <div class="grid-label">Last Name:</div>
      <div class="grid-value"><%= @user.last_name %></div>

      <div class="grid-label">Email:</div>
      <div class="grid-value"><%= @user.email %></div>

      <div class="grid-label">User Type:</div>
      <div class="grid-value"><%= display_user_type(@user.user_type_id) %></div>

      <div class="grid-label">Activated:</div>
      <div class="grid-value"><%= display_boolean_as_yes_or_no(@user.activated) %></div>

      <div class="grid-label">Activated At:</div>
      <div class="grid-value"><%= @user.activated_at.nil? ? @user.activated_at : @user.activated_at.localtime %></div>

      <div class="grid-label">Created At:</div>
      <div class="grid-value"><%= @user.created_at.localtime %></div>

      <div class="grid-label">Updated At:</div>
      <div class="grid-value"><%= @user.updated_at.localtime %></div>

    </div>
  </div>
</div>