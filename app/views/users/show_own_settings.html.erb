<% provide(:title, 'Account Settings') %>
<h1>Account Settings</h1>

<div class="buttons">
  <%= link_to 'Edit', edit_user_path(@user), class: "button is-primary" %>
</div>

<div class="show-grid-wrapper">

  <div class="grid-label">First Name:</div>
  <div class="grid-value"><%= @user.first_name %></div>

  <div class="grid-label">Last Name:</div>
  <div class="grid-value"><%= @user.last_name %></div>

  <div class="grid-label">Email:</div>
  <div class="grid-value"><%= @user.email %></div>

</div>